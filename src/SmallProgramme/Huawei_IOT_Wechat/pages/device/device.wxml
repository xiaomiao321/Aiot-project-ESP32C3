<!--pages/Huawei_IOT.wxml-->
<view class="container">

  <!-- 环形状态显示区域 -->
  <view class="status-circles-container">
    <view class="circle-wrap">
      <view class="circle-progress" style="--progress: {{tempProgress}};">
        <text class="progress-text">{{temperature}}℃</text>
      </view>
      <text class="circle-label">温度</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-phot" style="--progress: {{luxProgress}};">
        <text class="progress-text">{{lux}}</text>
      </view>
      <text class="circle-label">Lux</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-cpu" style="--progress: {{cpuLoadProgress}};">
        <text class="progress-text">{{cpuLoad}}%</text>
      </view>
      <text class="circle-label">CPULoad</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-gpu" style="--progress: {{gpuLoadProgress}};">
        <text class="progress-text">{{gpuLoad}}%</text>
      </view>
      <text class="circle-label">GPULoad</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-ram" style="--progress: {{ramLoadProgress}};">
        <text class="progress-text">{{ramLoad}}%</text>
      </view>
      <text class="circle-label">RAMLoad</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-esp" style="--progress: {{esp32TempProgress}};">
        <text class="progress-text">{{esp32Temp}}℃</text>
      </view>
      <text class="circle-label">ESP32Temp</text>
    </view>
  </view>

  <!-- 消息提示栏 -->
  <view class="message-panel">
    <text class="message-text">{{result}}</text>
  </view>

  <!-- 滑块控制区域 -->
  <view class="slider-panel">
    <view class="slider-group">
      <text class="slider-label">刷新频率 (1.0 - 5.0秒)</text>
      <slider bindchange="slider4change" activeColor="#FFA500" min="1" max="5" step="0.1" value="2" show-value block-size="22" block-color="#fff" color="#444"/>
    </view>
  </view>

  <!-- 按钮操作区域 -->
  <view class="button-panel">
    <button class="btn" type="primary" bindtap="touchBtn_subTopic">获取Token/订阅</button>
    <button class="btn" type="default" bindtap="touchBtn_getshadow">手动获取设备影子</button>
  </view>

</view>