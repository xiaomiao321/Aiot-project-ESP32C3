<!--pages/Huawei_IOT.wxml-->
<view class="container">

  <!-- 环形状态显示区域 -->
  <view class="status-circles-container">
    <view class="circle-wrap">
      <view class="circle-progress" style="--progress: {{tempProgress}};">
        <text class="progress-text">{{temperature}}℃</text>
      </view>
      <text class="circle-label">温度</text>
    </view>
    <view class="circle-wrap">
      <view class="circle-progress-phot" style="--progress: {{photProgress}};">
        <text class="progress-text">{{photores}}</text>
      </view>
      <text class="circle-label">光照</text>
    </view>
  </view>

  <!-- LED 颜色预览 -->
  <view class="led-container">
    <view class="led-display" style="background-color: {{ledColor}};"></view>
  </view>

  <!-- 消息提示栏 -->
  <view class="message-panel">
    <text class="message-text">{{result}}</text>
  </view>

  <!-- 滑块控制区域 -->
  <view class="slider-panel">
    <view class="slider-group">
      <text class="slider-label">红 (R)</text>
      <slider bindchange="slider1change" activeColor="#ff4a4a" min="0" max="255" show-value block-size="22" block-color="#fff" color="#444"/>
    </view>
    <view class="slider-group">
      <text class="slider-label">蓝 (B)</text>
      <slider bindchange="slider2change" activeColor="#4a4aff" min="0" max="255" show-value block-size="22" block-color="#fff" color="#444"/>
    </view>
    <view class="slider-group">
      <text class="slider-label">绿 (G)</text>
      <slider bindchange="slider3change" activeColor="#4aff4a" min="0" max="255" show-value block-size="22" block-color="#fff" color="#444"/>
    </view>
    <view class="slider-group">
      <text class="slider-label">刷新频率 (1.0 - 5.0秒)</text>
      <slider bindchange="slider4change" activeColor="#FFA500" min="1" max="5" step="0.1" value="2" show-value block-size="22" block-color="#fff" color="#444"/>
    </view>
  </view>

  <!-- 按钮操作区域 -->
  <view class="button-panel">
    <button class="btn" type="primary" bindtap="touchBtn_subTopic">获取Token/订阅</button>
    <button class="btn" type="default" bindtap="touchBtn_getshadow">手动获取设备影子</button>
    <view class="button-group">
      <button class="btn-half" type="primary" bindtap="onClickOpen">开灯并同步颜色</button>
      <button class="btn-half" type="warn" bindtap="onClickOff">关灯</button>
    </view>
  </view>

</view>